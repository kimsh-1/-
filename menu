    <script>
        document.querySelectorAll('.scene').forEach(scene => {
            const card = scene.querySelector('.card');

            // 카드를 클릭하여 뒤집는 기능
            card.addEventListener('click', () => {
                card.classList.toggle('is-flipped');
            });
            
            // 3D 호버 효과
            scene.addEventListener('mousemove', (e) => {
                const rect = scene.getBoundingClientRect();
                const x = e.clientX - rect.left - rect.width / 2;
                const y = e.clientY - rect.top - rect.height / 2;

                const rotateY = (x / (rect.width / 2)) * 15;
                const rotateX = -(y / (rect.height / 2)) * 15;
                
                const flipAngle = card.classList.contains('is-flipped') ? 180 : 0;

                // 클릭으로 뒤집힌 상태와 마우스 움직임에 따른 시점 변화를 함께 적용
                card.style.transform = `rotateY(${flipAngle + rotateY}deg) rotateX(${rotateX}deg)`;
            });

            // 마우스가 벗어났을 때 원래 각도로 복귀
            scene.addEventListener('mouseleave', () => {
                const flipAngle = card.classList.contains('is-flipped') ? 180 : 0;
                // 현재 뒤집힌 상태는 유지하면서 시점 효과만 리셋
                card.style.transform = `rotateY(${flipAngle}deg) rotateX(0deg)`;
            });
        });
    </script>
